<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DestinationActivity">

    <TextView
        android:layout_width="171dp"
        android:layout_height="44dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/alfa_slab_one"
        android:gravity="center_horizontal|center_vertical"
        android:text="MATH QUIZ"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="258dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/alfa_slab_one"
        android:gravity="center_horizontal|center_vertical"
        android:text="Find 3 correct answers to close the alarm off"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/counterWins"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="120dp"/>

    <TextView
        android:id="@+id/counterWins"
        android:layout_width="216dp"
        android:layout_height="61dp"
        android:layout_marginStart="96dp"
        android:layout_marginBottom="60dp"
        android:fontFamily="@font/alfa_slab_one"
        android:gravity="center_horizontal|center_vertical"
        android:text="Correct: 0/3"

        android:textColor="@color/design_default_color_error"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/mathEquation"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="292dp"
        android:layout_height="32dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="Write your answer: 1/2/3/4"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/mathEquation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/counterWins" />

    <TextView
        android:id="@+id/mathEquation"
        android:layout_width="214dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="284dp"
        android:background="@color/purple_600"
        android:fontFamily="@font/alfa_slab_one"
        android:gravity="center_horizontal|center_vertical"
        android:text="1050 + 25 = ?"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/option1"
        android:layout_width="169dp"
        android:layout_height="52dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="190dp"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mathEquation" />

    <Button
        android:id="@+id/option2"
        android:layout_width="155dp"
        android:layout_height="54dp"
        android:layout_marginStart="190dp"
        android:layout_marginTop="40dp"
        android:text=""
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mathEquation" />

    <Button
        android:id="@+id/option3"
        android:layout_width="155dp"
        android:layout_height="54dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="190dp"
        android:text=""
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/option1" />

    <Button
        android:id="@+id/option4"
        android:layout_width="155dp"
        android:layout_height="54dp"
        android:layout_marginStart="190dp"
        android:layout_marginTop="40dp"
        android:text=""
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/option2" />

    <EditText
        android:id="@+id/edittext"
        android:layout_width="152dp"
        android:layout_height="59dp"
        android:layout_marginTop="180dp"
        android:gravity="center"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mathEquation" />

    <Button
        android:id="@+id/submit"
        android:layout_width="28dp"
        android:layout_height="41dp"
        android:layout_marginStart="190dp"
        android:layout_marginTop="116dp"
        android:text=""
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/option2" />
    <!--
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notification Activity"
        android:textColor="@color/black"
        android:textSize="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.442" />
        -->

</androidx.constraintlayout.widget.ConstraintLayout>